{
  "name": "stream-survivors",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "lint": "xo --fix",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@pixi/sound": "^5.2.0",
    "howler": "^2.2.3",
    "pixi.js": "^7.2.4",
    "solid-js": "^1.7.8",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/howler": "^2.2.7",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-plugin-solid": "^2.7.0",
    "xo": "^0.55.0"
  },
  "lint-staged": {
    "*.{html,md,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "xo --fix"
    ]
  },
  "xo": {
    "rules": {
      "n/file-extension-in-import": "off"
    }
  }
}
